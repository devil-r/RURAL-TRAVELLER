<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userAccountFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <Button
                    android:id="@+id/account_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/user_account_button"
                    android:textColor="#047"
                    android:layout_marginHorizontal="10sp"
                    android:text="account details" />
                <Button
                    android:id="@+id/wallet"
                    android:layout_width="match_parent"
                    android:background="@drawable/user_account_button"
                    android:textColor="#047"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="10sp"

                    android:layout_height="wrap_content"
                    android:text="My Wallet" />

                <Button
                    android:id="@+id/my_packages"
                    android:textColor="#047"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/user_account_button"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="my_packages" />

                <Button
                    android:id="@+id/favourites"
                    android:layout_width="match_parent"
                    android:background="@drawable/user_account_button"
                    android:textColor="#047"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="10sp"

                    android:layout_height="wrap_content"
                    android:text="Wishlist" />

                <Button
                    android:id="@+id/faq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/user_account_button"
                    android:textColor="#047"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="10sp"

                    android:text="FaQ" />

                <Button
                    android:id="@+id/forum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/user_account_button"
                    android:textColor="#047"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="10sp"

                    android:text="Forum" />

                <Button
                    android:id="@+id/guideRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#047"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/user_account_button"

                    android:text="Guide Rating" />

                <Button
                    android:id="@+id/changepass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#047"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/user_account_button"

                    android:text="Change Password" />

                <Button
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/user_account_button"
                    android:textColor="#047"
                    android:layout_marginHorizontal="10sp"

                    android:text="Logout" />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</FrameLayout>